	keywords = {decoding; group codes; parity check codes; radiofrequency identification; RFID tags; automatic identification technology; group coding; group decoding; group integrity check; memory consumption; object identification; optimal performance; packaging list; parity check data; radio frequency identification; shipment list; Accuracy; Encoding; Numerical simulation; Performance evaluation; RFID tags; Group coding; group of things; integrity; radio frequency identification (RFID)},
	number = {3},
