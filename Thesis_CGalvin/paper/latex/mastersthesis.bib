	booktitle = {{Requirements Engineering Conference (RE), 2012 20th IEEE International}},
	doi = {10.1109/RE.2012.6345797},
	issn = {1090-750X},
	keywords = {cloud computing; data privacy; formal verification; inference mechanisms; mobile computing; security of data; BuddyTracker; cloud-based services; content-sensitive requirements; context-sensitive requirements; general disclosure requirements; key privacy management challenge; mobile applications; mobile computing devices; privacy arguments; privacy requirements; requirements engineering; selective disclosure requirement analysis; systematic reasoning; Calculus; Context; Mobile communication; Organizations; Privacy; Runtime; Security; mobile applications; privacy arguments; privacy requirements},
