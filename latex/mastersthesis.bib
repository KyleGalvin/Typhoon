	booktitle = {{Wireless Communication and Sensor Networks, 2008. WCSN 2008. Fourth International Conference on}},
	doi = {10.1109/WCSN.2008.4772673},
	keywords = {cryptography; energy harvesting; general purpose computers; telecommunication network routing; telecommunication network topology; wireless sensor networks; communication protocols; data collection; data processing; general-purpose computing; malicious attacks; mobile wireless networks; node distributions; power scavenging unit; routing optimisation; security topology; task distribution; task management; threshold cryptography; wire-line networks; wireless sensor networks; Base stations; Collaboration; Data processing; Data security; Information security; Network topology; Routing; Sense organs; Wireless communication; Wireless sensor networks},
