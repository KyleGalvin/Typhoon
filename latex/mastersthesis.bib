	keywords = {channel coding; computational complexity; data compression; object detection; video coding; video surveillance; H.264/AVC; activity monitoring; backward-channel aware Wyner-Ziv video coding; content analysis; error resilience scheme; event analysis; inter coding; intra coding; low-complexity surveillance video compression; object detection; privacy protection; public safety; reliable transmission; Backward-channel aware Wyner-Ziv video coding (BCAWZ); Wyner-Ziv video coding (WZVC); low complexity video compression; video surveillance},
	number = {4},
