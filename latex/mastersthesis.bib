	doi = {10.1109/MOBHOC.2007.4428690},
	keywords = {access protocols; mobile radio; routing protocols; wireless sensor networks; HW design; MAC protocols; actuation services; actuator control services; data aggregation; energy saving; fixed network; leaf nodes; middle layer; mobile network supported wireless sensor network services; query/command sensor ecosystems; remote users; routing protocols; sensor information provider; sensor measurements; sensor services middleware; service authorization; service composition; service discovery; service provisioning; wireless sensor networking; Actuators; Aggregates; Media Access Protocol; Middleware; Personnel; Routing protocols; Sensor phenomena and characterization; Sensor systems; Sensor systems and applications; Wireless sensor networks},
